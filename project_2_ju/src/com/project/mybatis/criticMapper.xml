<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="critic">
	<!-- 전문가 목록 전체 조회 -->
	<select id="all" resultType="com.mystudy.model.vo.criticVO">
		SELECT A.*, C.*
		FROM ACCOUNT A, CRITIC C
		WHERE A.NO = C.NO
	</select>
	
	<select id="one" resultType="com.mystudy.model.vo.criticVO">
		SELECT A.*, C.*
		FROM ACCOUNT A, CRITIC C
		WHERE A.NO = C.NO
  		AND A.NO = #{no}
  	</select>
	
</mapper>